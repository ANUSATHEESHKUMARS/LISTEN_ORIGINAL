<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Premium Headphones Store</title>
    <style>
      
    
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }
        nav {
    background: #333;
    padding: 1.5rem 1rem; /* Increased padding for more height */
    color: white;
    display: flex;
    justify-content: center; /* Centers content horizontally */
    align-items: center;
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 1000;
    gap: 2rem; /* Adds spacing between items */
    height: 70px; /* Sets a fixed height (adjust as needed) */
}

.logo {
    height: 10px; /* Adjust the height as needed */
    width: auto; /* Maintain aspect ratio */
    position: absolute; /* Positioning the logo */
    left: 80px; /* Move it towards the left */
    top: 30px; /* Adjust vertical position */
}

.logo img {
    height: 50px; /* Adjust height */
    width: auto; /* Keeps aspect ratio */
}

.nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
}
    .nav-links span {
            cursor: pointer;
            transition: color 0.3s;
        }

        .nav-links span:hover {
            color: #ddd;
        }

        .search-bar {
            text-align: center;
            padding: 1rem;
            background: #f5f5f5;
            margin-top: 60px; /* Space for fixed navbar */
        }

        .search-bar input {
            padding: 0.8rem;
            width: 50%;
            margin-right: 0.5rem;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .search-bar button {
            padding: 0.8rem 1.5rem;
            background: #333;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background 0.3s;
        }

        .search-bar button:hover {
            background: #444;
        }

        .hero {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 2rem 5%;
            background: linear-gradient(to right, #1a1a1a, #333);
            min-height: 500px;
            overflow: hidden;
        }

        .hero-content {
            flex: 1;
            padding-right: 3rem;
            color: white;
        }

        .hero-content h1 {
            font-size: 3rem;
            margin-bottom: 1rem;
            line-height: 1.2;
        }

        .hero-content p {
            font-size: 1.2rem;
            color: #ddd;
            margin-bottom: 2rem;
        }

        .hero-image {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
        }

        .hero-image img {
            max-width: 100%;
            height: auto;
            object-fit: cover;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
            transition: transform 0.3s;
        }

        .hero-image img:hover {
            transform: scale(1.05);
        }
     


        .cart-count {
            position: absolute;
            top: -8px;
            right: -8px;
            background: #ff4444;
            color: white;
            border-radius: 50%;
            padding: 0.2rem 0.5rem;
            font-size: 0.8rem;
            min-width: 20px;
            text-align: center;
        }

        /* Product Grid Styling */
        .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
            padding: 2rem 5%;
            background: #fff;
        }

        .product-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 1rem;
            text-align: center;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .product-card img {
            max-width: 100%;
            height: auto;
            margin-bottom: 1rem;
        }

        .product-card button {
            background: #333;
            color: white;
            border: none;
            padding: 0.8rem 1.5rem;
            border-radius: 4px;
            cursor: pointer;
            transition: background 0.3s;
        }

        .product-card button:hover {
            background: #444;
        }

        /* Section Headers */
        section h2 {
            text-align: center;
            margin: 2rem 0;
            font-size: 2rem;
            color: #333;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .hero {
                flex-direction: column;
                text-align: center;
                padding: 2rem;
            }

            .hero-content {
                padding-right: 0;
                margin-bottom: 2rem;
            }

            .nav-links {
                display: none;
            }

            .search-bar input {
                width: 70%;
            }
        }


        footer {
    background-color: black; /* Sets footer background to black */
    color: white; /* Makes text white for contrast */
    padding: 2rem;
    text-align: center;
}

    </style>
</head>
<!-- Rest of your HTML remains the same -->
</html>
</head>
<body>
    <nav>
        
        <!-- <img src="/images\Screenshot_2025-02-10_122353-removebg-preview.png" alt="Logo"> -->
    
        <div class="nav-links">
            <span>Home</span>
            <span>Products</span>
            <span>Category</span>
            <span>Brand</span>
            <span>About</span>

          
        </div>
    </nav>

    <div class="search-bar">
        <input type="text" placeholder="Search for headphones...">
        <button>Search</button>
    </div>

    <div class="hero">
        <div class="hero-content">
            <h1>Premium Audio Experience</h1>
            <p>Discover our collection of high-quality headphones</p>
        </div>
        <div class="hero-image">
            <img src="/images/Hammer_Headphones (3).jpg" alt="Premium Headphones">
        </div>
    </div>
    

    <section>
        <h2>Best Sellers</h2>
        <div class="product-grid" id="bestSellers">
            <!-- Products will be inserted here by JavaScript -->
        </div>
    </section>

    <section class="featured-brands">
        <h2>Featured Brands</h2>
        <div class="brand-grid" id="brands">
            <!-- Brands will be inserted here by JavaScript -->
        </div>
    </section>

    <footer>
        <div class="footer-content">
            <div>
                <h3>Contact Us</h3>
                <p>Email: support@headphonestore.com</p>
                <p>Phone: 9188268591</p>
            </div>
        </div>
    </footer>

    <script>
        // Sample product data
        const products = [
            {
                id: 1,
                name: "Premium Wireless Headphones",
                price: 299.99,
                rating: 4.5,
                image: "/api/placeholder/200/200"
            },
            {
                id: 2,
                name: "Sport Wireless Earbuds",
                price: 149.99,
                rating: 4.3,
                image: "/api/placeholder/200/200"
            },
            {
                id: 3,
                name: "Professional Studio Headphones",
                price: 399.99,
                rating: 4.8,
                image: "/api/placeholder/200/200"
            }
        ];

        // Cart functionality
        let cartCount = 0;
        const cartCountElement = document.querySelector('.cart-count');

        function updateCart() {
            cartCountElement.textContent = cartCount;
        }

        // Render products
        function renderProducts() {
            const bestSellersContainer = document.getElementById('bestSellers');
            
            products.forEach(product => {
                const productElement = document.createElement('div');
                productElement.className = 'product-card';
                productElement.innerHTML = `
                    <img src="${product.image}" alt="${product.name}">
                    <h3>${product.name}</h3>
                    <p>$${product.price}</p>
                    <p>Rating: ${product.rating}/5</p>
                    <button onclick="addToCart(${product.id})">Add to Cart</button>
                `;
                bestSellersContainer.appendChild(productElement);
            });
        }

        function addToCart(productId) {
            cartCount++;
            updateCart();
            alert('Product added to cart!');
        }

        // Search functionality
        const searchInput = document.querySelector('.search-bar input');
        const searchButton = document.querySelector('.search-bar button');

        searchButton.addEventListener('click', () => {
            const searchTerm = searchInput.value.toLowerCase();
            const filteredProducts = products.filter(product => 
                product.name.toLowerCase().includes(searchTerm)
            );
            // Clear and re-render products based on search
            document.getElementById('bestSellers').innerHTML = '';
            renderProducts(filteredProducts);
        });

        // Initialize page
        renderProducts();
    </script>
</body>
</html> 