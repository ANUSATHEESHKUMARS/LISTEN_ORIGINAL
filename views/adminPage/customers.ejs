<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Customers</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        .admin-container {
            display: flex;
            min-height: 100vh;
            background-color: #f0f2f5;
        }

        /* Sidebar Styles */
        .sidebar {
            width: 250px;
            background-color: #1a1a1a;
            color: white;
            padding: 20px;
        }

        .logo {
            text-align: center;
            margin-bottom: 30px;
        }

        .logo img {
            width: 80px;
            height: 80px;
        }

        .nav-item {
            padding: 12px 15px;
            display: flex;
            align-items: center;
            gap: 10px;
            color: white;
            text-decoration: none;
            margin-bottom: 5px;
            border-radius: 5px;
        }

        .nav-item:hover, .nav-item.active {
            background-color: #333;
        }

        .nav-item i {
            font-size: 1.2rem;
        }

        /* Main Content Styles */
        .main-content {
            flex: 1;
            padding: 20px;
        }

        .header {
            background-color: #666;
            padding: 15px 20px;
            border-radius: 8px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .header h2 {
            color: white;
            margin: 0;
        }

        .search-bar {
            background: white;
            border-radius: 5px;
            padding: 5px 10px;
            display: flex;
            align-items: center;
        }

        .search-bar input {
            border: none;
            outline: none;
            padding: 5px;
            width: 200px;
        }

        /* Table Styles */
        .customers-table {
            background: #4a4a4a;
            border-radius: 8px;
            overflow: hidden;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
        }

        .table th {
            background: #333;
            color: white;
            padding: 12px;
            text-align: left;
        }

        .table td {
            padding: 12px;
            color: white;
            border-bottom: 1px solid #5a5a5a;
        }

        .status-Active {
            color: #4CAF50;
        }

        .status-Blocked {
            color: #f44336;
        }

        .btn-block {
            background: #f44336;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 3px;
            cursor: pointer;
        }

        .btn-unblock {
            background: #FFC107;
            color: black;
            border: none;
            padding: 5px 10px;
            border-radius: 3px;
            cursor: pointer;
        }

        /* Pagination */
        .pagination {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 20px;
        }

        .pagination button {
            padding: 5px 15px;
            border: none;
            background: white;
            cursor: pointer;
            border-radius: 3px;
        }

        .pagination button.active {
            background: #333;
            color: white;
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="logo">
                <img src="/images/listen-logo.png" alt="Listen Logo">
                <h2>LISTEN</h2>
            </div>
            <a href="/admin/dashboard" class="nav-item">
                <i class="bi bi-speedometer2"></i> Dashboard
            </a>
            <a href="/admin/products" class="nav-item">
                <i class="bi bi-box"></i> Products
            </a>
            <a href="/admin/customers" class="nav-item active">
                <i class="bi bi-people"></i> Customers
            </a>
            <a href="/admin/orders" class="nav-item">
                <i class="bi bi-cart"></i> Orders
            </a>
            <a href="/admin/coupons" class="nav-item">
                <i class="bi bi-ticket"></i> Coupons
            </a>
            <a href="/admin/category" class="nav-item">
                <i class="bi bi-grid"></i> Category
            </a>
            <a href="/admin/offers" class="nav-item">
                <i class="bi bi-gift"></i> Offers
            </a>
            <a href="/admin/banner" class="nav-item">
                <i class="bi bi-image"></i> Banner
            </a>
            <a href="/admin/sales-report" class="nav-item">
                <i class="bi bi-graph-up"></i> Sales Report
            </a>
            <a href="/admin/logout" class="nav-item">
                <i class="bi bi-box-arrow-right"></i> Logout
            </a>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="header">
                <h2>Customers</h2>
                <div class="search-bar">
                    <i class="bi bi-search"></i>
                    <input type="text" id="searchInput" placeholder="Search customers...">
                </div>
            </div>

            <div class="customers-table">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Mobile</th>
                            <th>Address</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="customerTableBody">
                        <% users.forEach((user, index) => { %>
                            <tr>
                                <td><%= (currentPage - 1) * itemsPerPage + index + 1 %></td>
                                <td><%= user.name %></td>
                                <td><%= user.email %></td>
                                <td><%= user.mobile %></td>
                                <td><%= user.address %></td>
                                <td class="status-<%= user.isBlocked ? 'Blocked' : 'Active' %>">
                                    <%= user.isBlocked ? 'Blocked' : 'Active' %>
                                </td>
                                <td>
                                    <% if (!user.isBlocked) { %>
                                        <button class="btn-block" onclick="blockUser('<%= user._id %>')">Block</button>
                                    <% } else { %>
                                        <button class="btn-unblock" onclick="unblockUser('<%= user._id %>')">UnBlock</button>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div class="pagination">
                <% if (currentPage > 1) { %>
                    <button onclick="changePage('<%= currentPage - 1 %>')">Previous</button>
                <% } %>
                
                <% for(let i = 1; i <= totalPages; i++) { %>
                    <button class="<%= currentPage == i ? 'active' : '' %>" 
                            onclick="changePage('<%= i %>')"><%= i %></button>
                <% } %>
                
                <% if (currentPage < totalPages) { %>
                    <button onclick="changePage('<%= currentPage + 1 %>')">Next</button>
                <% } %>
            </div>
        </div>
    </div>

    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('#customerTableBody tr');

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });

        // Block User
        async function blockUser(userId) {
            try {
                const response = await fetch(`/admin/block-user/${userId}`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                if (response.ok) {
                    window.location.reload();
                } else {
                    alert('Failed to block user');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred');
            }
        }

        // Unblock User
        async function unblockUser(userId) {
            try {
                const response = await fetch(`/admin/unblock-user/${userId}`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                if (response.ok) {
                    window.location.reload();
                } else {
                    alert('Failed to unblock user');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred');
            }
        }

        // Change Page
        function changePage(page) {
            window.location.href = `/admin/customers?page=${page}`;
        }
    </script>
</body>
</html>