<script>

  
  const menuToggle = document.getElementById("menu-toggle");
  const mobileMenu = document.getElementById("mobile-menu");
  const menuPanel = mobileMenu.querySelector('div');
  
  // Get auth-related elements
  const authButtons = document.getElementById("authButtons");
  const userProfile = document.getElementById("userProfile");
  const mobileAuthButtons = document.getElementById("mobileAuthButtons");
  const mobileUserProfile = document.getElementById("mobileUserProfile");

  let isMenuOpen = false;
  
  // Check if user is authenticated (you'll need to set this based on your auth logic)
  const isAuthenticated = localStorage.getItem('isAuthenticated') === 'true';

  // Function to update UI based on auth status
  function updateAuthUI() {
    if (isAuthenticated) {
      // Hide auth buttons and show profile
      authButtons.classList.add('hidden');
      userProfile.classList.remove('hidden');
      mobileAuthButtons.classList.add('hidden');
      mobileUserProfile.classList.remove('hidden');
    } else {
      // Show auth buttons and hide profile
      authButtons.classList.remove('hidden');
      userProfile.classList.add('hidden');
      mobileAuthButtons.classList.remove('hidden');
      mobileUserProfile.classList.add('hidden');
    }
  }

  // Call updateAuthUI when page loads
  updateAuthUI();

  menuToggle.addEventListener("click", () => {
    isMenuOpen = !isMenuOpen;
    mobileMenu.classList.toggle("hidden");
    document.body.classList.toggle("overflow-hidden");
    
    // Update menu icon
    const menuIcon = menuToggle.querySelector('i');
    if (isMenuOpen) {
      menuIcon.classList.remove('fa-bars');
      menuIcon.classList.add('fa-xmark');
    } else {
      menuIcon.classList.remove('fa-xmark');
      menuIcon.classList.add('fa-bars');
    }
  });

  // Close menu when clicking outside
  mobileMenu.addEventListener('click', (event) => {
    if (event.target === mobileMenu) {
      mobileMenu.classList.add("hidden");
      document.body.classList.remove("overflow-hidden");
      isMenuOpen = false;
      const menuIcon = menuToggle.querySelector('i');
      menuIcon.classList.remove('fa-xmark');
      menuIcon.classList.add('fa-bars');
    }
  });

  // Example login/logout functions (adjust these based on your auth system)
  function login() {
    localStorage.setItem('isAuthenticated', 'true');
    updateAuthUI();
  }

  function logout() {
    localStorage.setItem('isAuthenticated', 'false');
    updateAuthUI();
  }
</script>